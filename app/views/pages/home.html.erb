            <%= image_tag asset_pack_path('media/shared/static/rhino-mini.png'), height: '500px' %>
          </div>
          <div class="gif-container">
            <%= image_tag asset_pack_path('media/shared/static/class.png'), height: '500px', class: 'gif-first-image' %>
